name: Check Pull Request
run-name: ${{ github.actor }} checking PR

on:
  workflow_dispatch:
  pull_request:
jobs:
  run_tests:
    name: Run tests
    runs-on: ubuntu-22.04
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: 3.9
      - run: python main.py
  validate_code:
    name: Validate code
    runs-on: ubuntu-22.04
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v3
        with:
          python-version: 3.9
      - run: python main.py
